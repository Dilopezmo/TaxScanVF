<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="View.Camara_view">

    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/button_flashon"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:background="@drawable/flash_on"
        android:layout_alignRight="@+id/camera_preview"
        android:layout_marginBottom="40sp"
        android:contentDescription="Prender flash"
        android:layout_margin="15sp"/>

    <Button
        android:id="@+id/button_cambiarcamara"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        android:background="@drawable/switch_camera"
        android:layout_alignRight="@+id/button_flashon"
        android:layout_marginTop="80sp"
        android:contentDescription="Tomar foto"
        android:padding="48dp"/>


    <ImageButton
        android:id="@+id/button_capturefoto"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:background="@drawable/take_foto_icon"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40sp"
        android:contentDescription="Tomar foto"/>



</RelativeLayout>