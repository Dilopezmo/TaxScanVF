<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pdfImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:contentDescription="Vista PDF" />

    <!-- Botón para desplegar el menú -->

    <!-- Layout para el menú desplegable -->
    <Button
        android:id="@+id/showMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:text="Mostrar Datos Escaneados" />

    <Button
        android:id="@+id/saveButtonn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="9dp"
        android:layout_toEndOf="@+id/showMenuButton"
        android:text="Guardar cambios" />

    <LinearLayout
        android:id="@+id/scannedDataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_above="@id/showMenuButton"
        android:visibility="gone">

        <!-- Aquí agregarás TextViews dinámicamente desde el código -->
    </LinearLayout>

</RelativeLayout>